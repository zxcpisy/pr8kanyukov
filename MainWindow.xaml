<Window x:Class="pr8Kanyukov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr8Kanyukov"
        mc:Ignorable="d"
        Title="" Height="450" Width="800">
    <Grid>
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button x:Name="UpdateButton"
                Grid.Row="0"
                Background="Pink"
                Content="Обновить данные о погоде" 
                Height="35" 
                FontSize="14"
                Margin="0,0,0,15"
                Click="UpdateButtonClick"/>
            <GroupBox Grid.Row="1" Padding="10">
                <DataGrid x:Name="WeatherDataGrid"  
                      IsReadOnly="True"
                      Background="Pink"
                      GridLinesVisibility="All"
                      HeadersVisibility="All">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Дата и время" 
                                        Binding="{Binding DateTime}" 
                                        Width="2*"
                                        FontWeight="Normal"/>
                        <DataGridTextColumn Header="Температура" 
                                        Binding="{Binding Temperature}" 
                                        Width="*"
                                        FontWeight="Normal"/>
                        <DataGridTextColumn Header="Давление" 
                                        Binding="{Binding Pressure}" 
                                        Width="*"
                                        FontWeight="Normal"/>
                        <DataGridTextColumn Header="Влажность" 
                                        Binding="{Binding Humidity}" 
                                        Width="*"
                                        FontWeight="Normal"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
